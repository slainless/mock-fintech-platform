{
    "consumes": [
        "application/json",
        "multipart/form-data",
        "application/x-www-form-urlencoded"
    ],
    "swagger": "2.0",
    "info": {
        "title": "Account Manager Service",
        "contact": {
            "name": "Aiman Fauzy"
        }
    },
    "basePath": "/",
    "paths": {
        "/account": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Get user's payment accounts",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Authentication token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.AccountsResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "post": {
                "produces": [
                    "application/json"
                ],
                "summary": "Register user's payment account",
                "parameters": [
                    {
                        "description": "Account data",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/user.CreatePayload"
                        }
                    },
                    {
                        "type": "string",
                        "description": "Authentication token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/user.AccountResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/account/{account_uuid}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Get user's payment account by UUID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Account UUID",
                        "name": "account_uuid",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Authentication token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.AccountResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/history": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Get user's payment account histories",
                "parameters": [
                    {
                        "type": "string",
                        "name": "account_id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "name": "from",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "name": "to",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Authentication token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.HistoriesResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "consumes": [
                    "application/json",
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Register user with JWT token",
                "parameters": [
                    {
                        "description": "JWT token",
                        "name": "payload",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/user.RegisterPayload"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/user.RegisterResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/subscription": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Get user's recurring payments",
                "parameters": [
                    {
                        "type": "string",
                        "name": "account_id",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Authentication token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/user.SubscriptionResponse"
                        }
                    },
                    "default": {
                        "description": "",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "platform.MonetaryAmount": {
            "type": "object",
            "properties": {
                "currency": {
                    "type": "string"
                },
                "value": {
                    "type": "integer"
                }
            }
        },
        "platform.PaymentAccount": {
            "type": "object",
            "properties": {
                "foreignID": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "serviceID": {
                    "type": "string"
                },
                "userUUID": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            }
        },
        "platform.RecurringPayment": {
            "type": "object",
            "properties": {
                "accountUUID": {
                    "type": "string"
                },
                "chargingMethod": {
                    "type": "integer"
                },
                "foreignID": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lastCharge": {
                    "type": "string"
                },
                "schedulerType": {
                    "type": "integer"
                },
                "serviceID": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            }
        },
        "platform.TransactionHistory": {
            "type": "object",
            "properties": {
                "accountUUID": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "currency": {
                    "type": "string"
                },
                "destUUID": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "mutation": {
                    "type": "integer"
                },
                "serviceUUID": {
                    "type": "string"
                },
                "status": {
                    "type": "integer"
                },
                "transactionDate": {
                    "type": "string"
                },
                "transactionNote": {
                    "type": "string"
                },
                "transactionType": {
                    "type": "integer"
                },
                "userUUID": {
                    "type": "string"
                },
                "uuid": {
                    "type": "string"
                }
            }
        },
        "user.AccountResponse": {
            "type": "object",
            "properties": {
                "account": {
                    "$ref": "#/definitions/platform.PaymentAccount"
                },
                "balance": {
                    "$ref": "#/definitions/platform.MonetaryAmount"
                }
            }
        },
        "user.AccountsResponse": {
            "type": "object",
            "properties": {
                "accounts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/platform.PaymentAccount"
                    }
                }
            }
        },
        "user.CreatePayload": {
            "type": "object",
            "required": [
                "account_id",
                "callback",
                "service_id"
            ],
            "properties": {
                "account_id": {
                    "description": "foreign account id, different from internal account UUID.",
                    "type": "string"
                },
                "callback": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "service_id": {
                    "type": "string"
                }
            }
        },
        "user.HistoriesResponse": {
            "type": "object",
            "properties": {
                "histories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/platform.TransactionHistory"
                    }
                }
            }
        },
        "user.RegisterPayload": {
            "type": "object",
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "user.RegisterResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string"
                }
            }
        },
        "user.SubscriptionResponse": {
            "type": "object",
            "properties": {
                "subscriptions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/platform.RecurringPayment"
                    }
                }
            }
        }
    }
}